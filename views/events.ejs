<% include partials/header.ejs %>

	<link rel="stylesheet" href="css/main.css">
	<link rel="stylesheet" href="css/navbar.css">
	<link rel="stylesheet" href="css/page-header-css/main.css">
	<link rel="stylesheet" href="css/gallery.css">
	<link rel="stylesheet" href="css/footer.css">
</head>

<!-- This article container is the header for each file -->
<article class="jumbotron d-flex flex-wrap tinted-image py-0 mb-0">
	<% include partials/navbar.ejs %>
	<div class="container-fluid align-self-center pb-5">
		<h1 class="text-center main-header">Events</h1>
	</div>
	<div class="d-flex justify-content-center align-items-end pb-2 w-100">
		<i class="far fa-arrow-alt-circle-down" style="font-size: 3rem; color: #fff;"></i>
	</div>
</article>

<div class="container">
	<div class="pt-3 text-center">
		<a href="/events/form">
			<button class="btn btn-light btn-lg mx-1 yellow-btn">Add Event</button>
		</a>
	</div>
	<% events.forEach((event) => { %>
	<div class="row py-5">
		<div class="col-3 d-inline">
			<img src="<%=event.image%>" alt="nuestro credo image" class="img-thumbnail img-fluid">
		</div>
		<div class="col-9 d-inline">
				<p>EVENT NAME: <%=event.name%></p>
				<p>EVENT DESCRIPTION: <%=event.description%></p>
				
				<div class="text-center d-flex justify-content-center">
					<a class="btn btn-light btn-lg mx-1 outline-btn" href="/events/<%=event._id%>/edit">Edit</a>
      				<form id="delete" action="/events/<%=event._id%>/delete?_method=DELETE" method="POST">
        				<button class="btn btn-light btn-lg mx-1 yellow-btn">Delete</button>
      				</form>
				</div>
			</div>
		</div>
		<% }); %>
	</div>

<% include partials/footer.ejs %>



	